#! /bin/bash

## date:    2021.06.21
## file:    compile and install cppzmq
## author:  duruyao@hikvision.com
## release: https://github.com/zeromq/cppzmq/releases

if [ $# != 2 ]; then
  printf "USAGE (sudo permission may be needed):\n"
  printf "    %s <ZIP_DIR> <INSTALL_DIR>\n" "${0}"
  exit 1
fi

zip_dir="${1}"
ins_dir="${2}"
new_folder="$(dirname "${zip_dir}")/cppzmq_source"

mkdir -p "${new_folder}" && rm -rf "${new_folder:?}/"*
unzip -q "${zip_dir}" -d "${new_folder}"

src_dir="${new_folder}/$(ls "${new_folder}")"

mkdir -p "${ins_dir}" && rm -rf "${ins_dir:?}/"*
cd "${src_dir}" || exit

build_dir=${new_folder}/build

mkdir -p "${build_dir}" && cd "${build_dir}" || exit

cmake .. -DCPPZMQ_BUILD_TESTS=OFF \
  -DCMAKE_INSTALL_PREFIX="${ins_dir}" \
  -DCMAKE_PREFIX_PATH="/data1/duruyao/HikSDK/zmq" \
  -DCMAKE_CXX_FLAGS="-I/data1/duruyao/HikSDK/zmq/include" \
  -DCMAKE_BUILD_WITH_INSTALL_RPATH=OFF \
  -DCMAKE_INSTALL_RPATH="${ins_dir}/lib" \
  -DCMAKE_INSTALL_RPATH_USE_LINK_PATH=ON

make -j16 install

printf "\n"
printf "Install cppzmq "
printf "to \`${ins_dir}\`:\n"
ls -all "${ins_dir}"
printf "\n"
